// Traigo #total
const total = document.querySelector("#total")
// Traigo #subtotal
const subtotal = document.querySelector("#subtotal")
// Traigo #resultado
const resultado = document.querySelector("#resultado")
resultado.placeholder = (subtotal.placeholder * 100 / total.placeholder).toFixed(2) + "%"
// Traigo #button
const button = document.querySelector("#button")
// Traigo #formulaSub
const formulaSub = document.querySelector("#formulaSub")
formulaSub.innerText = subtotal.placeholder
// Traigo #formulaTotal
const formulaTotal = document.querySelector("#formulaTotal")
formulaTotal.innerText = total.placeholder
// Traigo #formulaResultado
const formulaResultado = document.querySelector("#formulaResultado")
formulaResultado.innerText = (subtotal.placeholder * 100 / total.placeholder).toFixed(2) + "%"
// Función para calcular
function calcular(){
  // Calculo
  if (subtotal.value != "" && total.value != ""){
      const calculo = (subtotal.value * 100 / total.value).toFixed(2)
  resultado.value = calculo + "%"
  formulaSub.innerText = subtotal.value
  formulaTotal.innerText = total.value
  formulaResultado.innerText = resultado.value
  resultado.classList.add("bg-warning")
  }

}

// Evento
button.addEventListener("click", calcular)

//------ Calculo a partir de porcentaje

// Traigo #totalPor
const totalPor = document.querySelector("#totalPor")
// Traigo #subtotalPor
const subtotalPor = document.querySelector("#subtotalPor")
// Traigo #resultadoPor
const resultadoPor = document.querySelector("#resultadoPor")
resultadoPor.placeholder = Number(totalPor.placeholder * subtotalPor.placeholder / 100) + Number(totalPor.placeholder)
// Traigo #buttonPor
const buttonPor = document.querySelector("#buttonPor")
// Traigo #formulaSubPor
const formulaSubPor = document.querySelector("#formulaSubPor")

formulaSubPor.innerText = subtotalPor.placeholder
// Traigo #formulaTotalPor
const formulaTotalPor = document.querySelector("#formulaTotalPor")
formulaTotalPor.innerText = totalPor.placeholder
// Traigo #formulaResultadoPor
const formulaResultadoPor = document.querySelector("#formulaResultadoPor")
formulaResultadoPor.innerText = (totalPor.placeholder * subtotalPor.placeholder / 100) 


// Función para calcular
function calcularPor(){
  // Calculo
  if (subtotalPor.value != "" && totalPor.value != ""){
      const calculoPor = Number(totalPor.value * subtotalPor.value / 100) 
  resultadoPor.value = Number(calculoPor) + Number(totalPor.value)
  formulaSubPor.innerText = subtotalPor.value
  formulaTotalPor.innerText = totalPor.value
  formulaResultadoPor.innerText = Number(calculoPor)
  resultadoPor.classList.add("bg-warning")
  }
}

// Evento
buttonPor.addEventListener("click", calcularPor)


//------ regla inversa

// Traigo #total
const cantidadAnt = document.querySelector("#cantidadAnt")
// Traigo #subtotal
const totalAnt = document.querySelector("#totalAnt")
// Traigo #resultado
const cantidadNueva = document.querySelector("#cantidadNueva")
// Traigo #button
const buttonInv = document.querySelector("#buttonInv")
// Traigo #formulaSub
const formulaCantidadAnt = document.querySelector("#formulaCantidadAnt")
formulaCantidadAnt.innerText = cantidadAnt.placeholder
// Traigo #formulaTotal
const formulaTotalAnt = document.querySelector("#formulaTotalAnt")
formulaTotalAnt.innerText = totalAnt.placeholder
// Traigo #formulaCantidadNueva
const formulaCantidadNueva = document.querySelector("#formulaCantidadNueva")
formulaCantidadNueva.innerText = cantidadNueva.placeholder
// Traigo #formulaResultadoInv
const formulaResultadoInv = document.querySelector("#formulaResultadoInv")
formulaResultadoInv.innerText = cantidadAnt.placeholder * totalAnt.placeholder / cantidadNueva.placeholder
// ---- Traigo #resultadoInv
const resultadoInv = document.querySelector("#resultadoInv")
resultadoInv.value = cantidadAnt.placeholder * totalAnt.placeholder / cantidadNueva.placeholder
// Función para calcular
function calcularInv(){
  // Calculo
  if (cantidadAnt.value != "" && totalAnt.value != "" && cantidadNueva.value != ""){
      const calculo = cantidadAnt.value * totalAnt.value / cantidadNueva.value
      resultadoInv.value = calculo
      formulaCantidadAnt.innerText = cantidadAnt.value
      formulaTotalAnt.innerText = totalAnt.value
      formulaCantidadNueva.innerText = cantidadNueva.value
      resultadoInv.classList.add("bg-warning")
  }

}
// Evento
buttonInv.addEventListener("click", calcularInv)










